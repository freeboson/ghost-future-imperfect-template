{{!< default}}
<div id="main">
	{{#post}}
		<article class="{{post_class}}">
			<header>
				<div class="title">
					<h2><a href="{{url}}">{{{title}}}</a></h2>
					{{!--<p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p>--}}
				</div>
				<div class="meta">
					<time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
					
					<a href="#" class="author"><span class="name">{{author.name}}</span><img src="{{author.profile_image}}" alt="" /></a>
					{{!--{{tags prefix=" on "}}--}}
				</div>
			</header>
			{{#if feature_image}}
			<a href="{{url}}" class="image featured"><img src="{{img_url}}" alt="" /></a>
			{{/if}}
			<div class="post-content">{{content}}</div>
			<footer>
				<ul class="actions">
				    {{#prev_post}}
					    <li><a href="{{url}}" class="button big">Previous Post</a></li>
				    {{/prev_post}}
				    {{#next_post}}
					    <li><a href="{{url}}" class="button big">Next Post</a></li>
				    {{/next_post}}
				</ul>
				<ul class="stats">
					{{tags prefix=" on "}}
					{{!--<li><a href="#">General</a></li>--}}
					{{!--<li><a href="#" class="icon fa-heart">28</a></li>--}}
					{{!--<li><a href="#" class="icon fa-comment">128</a></li>--}}
				</ul>
			</footer>
  			<div id="disqus_thread" class="container"></div>
			<script>
